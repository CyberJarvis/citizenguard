# Application Settings
APP_NAME=CoastGuardian
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
API_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security (CHANGE IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-here-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=120
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Allowed Origins (CORS) - comma separated
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database - MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=CoastGuardian
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=50

# Cache - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=False

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@CoastGuardian.in
SMTP_FROM_NAME=CoastGuardian
SMTP_TLS=True

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=5
OTP_MAX_ATTEMPTS=3

# Rate Limiting (Requires Redis - set to False if Redis not available)
RATE_LIMIT_ENABLED=False
RATE_LIMIT_WINDOW_SECONDS=3600
RATE_LIMIT_MAX_REQUESTS_PER_WINDOW=100
RATE_LIMIT_LOGIN_MAX_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW_SECONDS=900

# Google OAuth2
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Session Configuration
SESSION_COOKIE_NAME=CoastGuardian_session
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=lax
SESSION_MAX_AGE=86400

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGIT=True
PASSWORD_REQUIRE_SPECIAL=True

# Audit Logging
AUDIT_LOG_ENABLED=True
LOG_LEVEL=INFO

# ==============================================
# Weather & Environmental Data APIs
# ==============================================

# WeatherAPI.com (Primary Weather Provider)
# Get FREE API key: https://www.weatherapi.com/signup.aspx
# Free tier: 1 million calls/month, real-time + marine data
WEATHERAPI_KEY=your-weatherapi-key-here

# OpenWeatherMap (Fallback Provider)
# Get FREE API key: https://openweathermap.org/api
# Free tier: 60 calls/minute, 1,000,000 calls/month
OPENWEATHER_API_KEY=your-openweather-key-here

# ML Monitoring Configuration
ML_UPDATE_INTERVAL_MINUTES=5
EARTHQUAKE_FETCH_HOURS=24
EARTHQUAKE_MIN_MAGNITUDE=4.0
WEATHER_CACHE_TTL_SECONDS=300

# ==============================================
# Social Media Intelligence (SMI) Module
# ==============================================
# Enable/disable SMI module integration
SMI_ENABLED=True

# SMI module URL (default: http://localhost:8001)
SMI_BASE_URL=http://localhost:8001

# SMI request timeout in seconds
SMI_TIMEOUT_SECONDS=30

# How often to sync SMI alerts to notification system (seconds)
SMI_ALERT_SYNC_INTERVAL_SECONDS=30

# Minimum relevance score to trigger critical alert
SMI_CRITICAL_ALERT_THRESHOLD=7.0

# Auto-start SMI feed on backend startup
SMI_AUTO_START_FEED=True

# Default feed configuration
SMI_DEFAULT_POST_INTERVAL=8
SMI_DEFAULT_DISASTER_PROBABILITY=0.3
